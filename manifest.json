{
  "manifest_version": 3,
  "name": "Contextual Browser Agent",
  "version": "0.1.0",
  "description": "An AI-powered agent to help you read, comprehend, and refine web content directly in your browser.",
  "permissions": ["activeTab", "scripting", "sidePanel", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Contextual Agent"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
